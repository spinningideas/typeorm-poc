{
  "compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode"
	]
}